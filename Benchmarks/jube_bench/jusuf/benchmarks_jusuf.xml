<?xml version="1.0" encoding="UTF-8"?>
<jube>

  <!-- All JUSUF benchmarks -->

  <include-path>
    <path>../../jube_config/</path>
  </include-path>

  <benchmark name="hpc_general" outpath="../../../../BenchWork/jube_hpc/nest_3">
    
    <step name="bench">
      <use from="hpc_benchmark_3_0_jusuf_strict.xml">scale_check</use>
      <use from="hpc_benchmark_3_0_jusuf_strict.xml">bench</use>
    </step>

    <!-- Analyse -->
    <analyser name="analyse_scale_check">
      <use from="bench_jobs.xml">nest_pattern_stdcout</use>      <!-- use existing patternset -->
      <analyse step="bench">
        <file>stdout</file>    <!-- file which should be scanned -->
      </analyse>
    </analyser>

    <result>
      <use>analyse_scale_check</use>      <!-- use existing analyser -->
      <use from="hpc_benchmark_3_0_jusuf_strict.xml">result_table</use>
    </result>
  
  </benchmark>

  <benchmark name="population_general" outpath="../../../../BenchWork/jube_population/nest_3">
    
    <step name="bench">
      <use from="population_py_3_0_jusuf_strict.xml">scale_check</use>
      <use from="population_py_3_0_jusuf_strict.xml">bench</use>
      <use from="population_py_3_0_jusuf_strict.xml">analyse_scale_check</use>
      <use from="population_py_3_0_jusuf_strict.xml">result_table</use>
    </step>
  
  </benchmark>

</jube>